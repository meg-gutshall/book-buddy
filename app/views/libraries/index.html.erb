<h1>Libraries</h1>

<table>
  <thead>
    <tr>
      <th>Room Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.room_number %></td>
        <td><% if current_student %><%= link_to "Show", school_library_path(library.school, library) %><% end %><%= hide_admin_action(link_to "Show", library) %></td>
        <td><%= hide_admin_action(link_to "Edit", edit_library_path(library)) %></td>
        <td><%= hide_admin_action(link_to "Delete", library, method: :delete, data: { confirm: "Are you sure?" }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= hide_admin_action(link_to 'New Library', new_library_path) %>
<%= link_to "Home", root_path %>
