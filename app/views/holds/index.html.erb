<h1>Holds</h1>

<table>
  <thead>
    <tr>
      <th>Available</th>
      <th>Borrowed</th>
      <th>Cancelled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holds.each do |hold| %>
      <tr>
        <td><%= hold.available %></td>
        <td><%= hold.borrowed %></td>
        <td><%= hold.cancelled %></td>
        <td><%= link_to "Show", student_hold_path(current_student, hold) %></td>
        <td><%= link_to "Edit", edit_student_hold_path(current_student, hold) %></td>
        <td><%= hide_admin_action(link_to "Delete", student_hold_path(current_student, hold), method: :delete, data: { confirm: "Are you sure?" }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Hold", new_student_hold_path(current_student) %>
<%= link_to "Home", root_path %>
