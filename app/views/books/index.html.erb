<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Copies</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.copies %></td>
        <td><% if current_student %><%= link_to "Show", book %><% end %><%= hide_admin_action(link_to "Show", admin_book_path(current_admin, book)) %></td>
        <td><%= link_to "Edit", edit_admin_book_path(current_admin, book) %></td>
        <td><%= link_to "Destroy", admin_book_path(current_admin, book), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= hide_admin_action(link_to "New Book", new_admin_book_path(current_admin)) %>
<%= link_to "Home", root_path %>
