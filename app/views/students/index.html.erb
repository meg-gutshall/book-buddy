<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>School Name</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.school.name %></td>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.email %></td>
        <td><% if current_student %><%= link_to "Show", school_student_path(student.school, student) %><% end %><%= hide_admin_action(link_to "Show", student) %></td>
        <td><%= link_to "Edit", edit_student_registration_path(student) %></td>
        <td><%= link_to "Delete", student, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= hide_admin_action(link_to "New Student", new_student_registration_path) %>
<%= link_to "Home", root_path %>
